# =============================================================================
# CoralbloxCf Environment Configuration Template
# =============================================================================

# Copy this file to .env and fill in the values for your environment
# Required variables must be set, optional variables have defaults

# =============================================================================
# REQUIRED: Mount Paths & Data Configuration
# =============================================================================

# Valid values: "MOORE" or "GBR"
# Determines which data loading logic and spatial modes are used
DATA_PACKAGE=MOORE

# Path to the specific input data package (e.g., the folder containing datapackage.json for MOORE)
# Ensure this path is mounted into the container
DATA_PACKAGE_PATH=/path/to/inputs/Moore_2025-xx-xx_v0

# Local scratch directory for intermediate ADRIA results
# This should be a fast, writable volume. It will be cleaned up after upload.
ADRIA_OUTPUT_DIR=/tmp/adria_scratch

# =============================================================================
# REQUIRED: AWS S3 File Storage
# =============================================================================

AWS_REGION=ap-southeast-2

# The full S3 URI where the final result set, charts, and metrics will be uploaded
# Format: s3://bucket-name/folder/unique-run-id
S3_OUTPUT_PATH=<SUPPLY s3://path/here>

# Optional: Override for local development (e.g., MinIO)
# S3_ENDPOINT=http://localhost:9000

# =============================================================================
# REQUIRED: Simulation Configuration
# =============================================================================

# Number of scenarios/samples to generate and run
# Example: 16 (for testing), 50, 100
NUM_SCENARIOS=16

# RCP Scenario identifier
# Valid values usually: "26", "45", "60", "85"
# Default: "45"
RCP_SCENARIO=45

# =============================================================================
# OPTIONAL: Model Customization
# =============================================================================

# JSON Array string defining custom bounds for model parameters
# If empty, default bounds from the Domain are used.
# Format: [{"param_name": "x", "lower": 0.0, "upper": 1.0, "optional_third": 0.5}]
# Default: []
MODEL_PARAMS=[]

# ADRIA specific configuration
ADRIA_NUM_CORES=2
ADRIA_DEBUG=false
ADRIA_THRESHOLD=1e-8

# =============================================================================
# OPTIONAL: Execution Configuration
# =============================================================================

# Number of Julia threads to use for parallel processing
# Recommendation: Set to the number of available CPU cores
JULIA_NUM_THREADS=2
